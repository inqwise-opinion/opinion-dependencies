	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.inqwise.opinion</groupId>
		<artifactId>opinion-parent</artifactId>
		<version>7</version>
	</parent>

	<artifactId>opinion-dependencies</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<name>Opinion Dependencies</name>
	<description
    >Bill of materials that locks Opinion platform dependency versions</description>
	<packaging>pom</packaging>
	<url>https://github.com/inqwise-opinion/opinion-dependencies</url>

	<organization>
		<name>inqwise</name>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>alex-inqwise</id>
			<name>Alex Misyuk</name>
			<email>alex@inqwise.com</email>
			<organization>inqwise</organization>
			<organizationUrl>https://www.inqwise.com</organizationUrl>
		</developer>
	</developers>

	<scm>
		<connection
        >scm:git:https://github.com/inqwise-opinion/opinion-dependencies.git</connection>
		<developerConnection
        >scm:git:https://github.com/inqwise-opinion/opinion-dependencies.git</developerConnection>
		<url>https://github.com/inqwise-opinion/opinion-dependencies</url>
		<tag>HEAD</tag>
	</scm>

	<distributionManagement>
		<repository>
			<id>sonatype-oss-release</id>
			<name>Central Repository</name>
			<url>https://central.sonatype.com/api/v1/publisher</url>
		</repository>
		<snapshotRepository>
			<id>sonatype-oss-snapshots</id>
			<name>Central Portal Snapshots</name>
			<url>https://central.sonatype.com/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<properties>
		<commons.lang.version>2.5</commons.lang.version>
		<guava.version>33.5.0-jre</guava.version>
		<mysql.version>9.4.0</mysql.version>
		<json.version>20250517</json.version>
		<log4j2.version>2.25.2</log4j2.version>
		<jaxb.version>4.0.4</jaxb.version>
		<slf4j.version>2.0.17</slf4j.version>
		<metrics.version>3.0.2</metrics.version>
		<poi.version>5.4.1</poi.version>
		<testcontainers.version>2.0.1</testcontainers.version>
		<vertx.version>5.0.5</vertx.version>
		<junit5.version>6.0.0</junit5.version>
		<junit.platform.version>1.11.0</junit.platform.version>
	</properties>

